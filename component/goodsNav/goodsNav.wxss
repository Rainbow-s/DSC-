/* component/goodsNav/goodsNav.wxss */
.swiper-wrap{
  width: 96%;
  margin-left: 2%;
  border-radius: 20rpx;
  height: 400rpx;
  box-shadow: 0 0 20rpx #ccc;
  position: relative;

}
.swiper {
  width: 100%;
height: 400rpx;
}

.swiper-item {
  height: 400rpx;
}

.goods-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  /* background-color: skyblue; */
}

.goods-list .goods-item {
  width: 20%;
  height: 180rpx;
  text-align: center;

  /* background-color: red; */
}

.goods-item .item-wrap {
  display: inline-block;
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-wrap: wrap;
  text-align: center;
  /* align-items: center; */
}

.item-wrap .img {
  width: 142rpx;
  height: 142rpx;
}

.item-wrap .info {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
}
.swiper-footer{
  width: 50%;
  height: 40rpx;
  display: flex;
position: absolute;
bottom: 0;
left: 25%;
justify-content: space-around;
/* margin-left: -25%; */
  /* background-color: red; */
  /* margin: 0 auto; */

}
.swiper-footer .footer-item{
width: 30%;
background-color: red;
height: 10rpx;
}
.footer-item.active{
  background-color: black;
}