.kaixue-wrap {
  width: 96%;
  margin-left: 2%;
  height: 348rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 20rpx #ccc;

}

.kaixue-wrap .item {
