<!--component/swiperNews/swiperNews.wxml-->
<view class="swiper-news-wrap">
<view class="swiper-news">
  <view class="left-logo">
    <image class="logo" src="https://x.dscmall.cn/storage/data/gallery_album/177/original_img/177_P_1597978466633.png"></image>
  </view>
  <view class="right-news">
    <swiper class="news" vertical="true" autoplay="true" interval="3000" circular>
     <swiper-item wx:for="{{newsData}}" wx:key="index" class="news-item ">
       {{item.title}}
     </swiper-item>
    </swiper>
    <view class="more iconfont icon-jiantou1">
      >
      <!-- <text class="iconfont icon-jiantou1"></text> -->
    </view>
  </view>
</view>
</view>
