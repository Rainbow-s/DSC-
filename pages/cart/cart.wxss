/* pages/cart/cart.wxss */
/* 当没有商品时显示 */
.cart-wrap{
  width: 100%;
  background-color: #efefef;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

}
.no-goods{
  width: 96%;
  height: 510rpx;
  overflow: hidden;
  margin-top: 20rpx;

  margin-left: 2%;
  background-color: #fff;
  /* box-shadow: 0 0 20rpx #ccc ,0 0 20rpx #ccc,0 0 20rpx #ccc; */
}
.no-goods .img{

  width: 100%;
  height: 200rpx;
  display: flex;
  margin-top: 50rpx;
  justify-content: center;
  /* background-color: rebeccapurple; */
}
.img image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}
.no-goods .tips{
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
}
.no-goods .btn-control{
  margin-top: 40rpx;
  width: 96%;
  margin-left: 2%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  display: flex;
  font-size: 28rpx;
  margin-top: 30rpx;
  justify-content: center;
}
.btn-control .go-look{
  border: 1px solid #ccc;
  height: 60rpx;
  padding: 0 20rpx 0 20rpx;
  margin-right: 40rpx;
}
.btn-control .to-mylove{
  border: 1px solid #ccc;
  height: 60rpx;
  padding: 0 20rpx 0 20rpx;


}

/* 购物车 */
.cart-wrap .cart{
  width: 96%;
  /* height: 1000rpx; */
  margin-left: 2%;
  /* background-color: skyblue; */
}
.cart .my-address{
  width: 100%;
  height: 82rpx;
  display: flex;
  margin-bottom: 20rpx;

  box-sizing: border-box;
  padding: 20rpx 0 20rpx 0;
  justify-content: space-between;
}
.my-address .address{
  width: 70%;
  height: 82rpx;
  font-size: 28rpx;
  color: black;
}
.my-address .bianji{
  font-size: 28rpx;
  color: red;
}
.shop{
  width: 100%;
  margin-bottom: 40rpx;
}
.shop .shop-header{
  width: 100%;
  display: flex;
  height: 92rpx;
  align-items: center;
  line-height: 92rpx;

}
/* 勾选 */
.shop-header .check{
  width: 40rpx;
 
  height: 40rpx;
 
  text-align: center;
  line-height: 38rpx;
  margin-right: 20rpx;
}
.shop-header .shop-title{
  font-weight: 900;
}

/* 商品信息 */
.shop-goodsinfo{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color: #ccc; */
}
.shop-goodsinfo .check{
  width: 40rpx;
  height: 40rpx;

  text-align: center;
  line-height: 40rpx;

  
}
.shop-goodsinfo .goods-info{
  width: 660rpx;
  height: 200rpx;
display: flex;
justify-content: space-between;
align-items: center;
  background-color: #fff ;
}
.goods-info .img{
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.shop-goodsinfo .goods-info .img image{
width: 100%;
height: 100%;
border-radius: 0;
}
.goods-info .goods{
  width: 69%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background-color: teal; */
}
.goods .goods-name{
  width: 100%;
  height: 96rpx;
  line-height: 48rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  -webkit-box-orient: vertical;
}
.goods .goods-control{
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  /* background-color: thistle; */
}
.goods-control .goods-price{
  font-size: 28rpx;
  color: red;
}
.goods-control .goods-num-control{
  width: 220rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.goods-num-control  .num-control{
  display: flex;
  width: 70%;
  border: 1px solid #ccc;
  justify-content: center;
  border-radius: 30rpx;
  height: 100%;
  line-height: 40rpx;
  

}
.goods-num-control  .num-control .input{
  text-align: center;
  font-size: 28rpx;
  width: 84rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  border: 1px solid #efefef;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
.goods-num-control .num-control  .btn{
  width: 60rpx;
  text-align: center;
}
.num-control .del{
  margin-right: 20rpx;
}

/* 计算总价 全选 */
.computed-wrap{
  width: 100%;
  height: 100rpx;
  /* background-color: skyblue; */
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  left: 0;
  display: flex;
  justify-content: space-between;

}
.computed{
  width: 20%;
  height: 100%;
display: flex;
align-items: center;

/* line-height: 100rpx; */
  background-color: #fff;
}
.computed .check{
  width: 75rpx;
  height: 100%;
line-height: 100rpx;
align-items: center;
margin-top: 56rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.total-price,.gobuy{
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
text-align: center;
}
.gobuy{
  width: 30%;
  background-color: red;
  text-align: center;
  color: white;
  font-size: 28rpx;
  
}






















/* 猜你喜欢 */
.goods-guess{
  width: 96%;
  margin-left: 2%;
  
}
.goods-guess .title{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #ccc;
}
.goods-list{
  width: 100%;

  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-list .goods-item{
  width: 49%;
  height: 542rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.goods-item .goods-img{
  width: 100%;
  height: 356rpx;
  margin-bottom: 20rpx;
}
.goods-img image{
  width: 100%;
  height: 100%;
}
.goods-item .goods-name{
  width: 90%;
  margin-left: 5%;
  height: 76rpx;
  line-height: 38rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
font-size: 28rpx;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.goods-item .goods-price{
  width: 96%;
  margin-left: 2%;
  display: flex;
  padding-right: 35rpx;
  justify-content: center;
  height: 64rpx;
  color: red;
  box-sizing: border-box;
}