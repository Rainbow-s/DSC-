/* pages/search/search.wxss */

@import "../../asset/fonts/iconfont.wxss";

.search-h{
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 0 20rpx #ccc;
  /* position: fixed;
  z-index: 999; */
  background-color: #fff;
}
.icon{
  width: 9%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  color: #ccc;
  /* background-color: teal; */
}
.search-h .input{
  width: 78%;
  border-radius: 30rpx;
  height: 60rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
}
.icon-sousuo{
  position: absolute;
  height: 96rpx;
  right: 111rpx;
  color: #ccc;
  font-weight: 300;
  line-height: 96rpx;
}
.go-good-list{
  width: 13%;
  height: 100%;
  text-align: center;
  line-height: 96rpx;
  font-size: 30rpx;
}
.near-search{
  width: 96%;
  margin-left: 2%;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.near-search .title{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
}
.near-search .search-text{
  display: flex;
  width: 104%;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.search-text .search-item{
  padding: 0 20rpx 0 20rpx;
  background-color: #efefef;
  margin-right: 20rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}
