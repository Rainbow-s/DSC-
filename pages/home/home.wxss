.header{
  width: 100%;
  height: 185rpx;
}
.fix{
  width: 100%;
  height: 185rpx;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
  background-color: red;
  transition: all 0.5s;
}
scroll-view{
  width: 100%;
  height: 88rpx;
  /* background-color: red; */
  line-height: 88rpx;
  border: 1px solid #efefef;

  
}
.tab-nav{
  width: 1200rpx;
  height: 100%;
display: flex;
}
.tab-nav .tab-item{
  width: 150rpx;
  height: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
}
.tab-item.active{
 
  font-size: 30rpx;
  font-weight: 900;
  border-bottom: 2px solid green;

}
