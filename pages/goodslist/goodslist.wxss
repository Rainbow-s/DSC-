/* pages/goodslist/goodslist.wxss */

@import "../../asset/fonts/iconfont.wxss";

.goodslist-wrap {
  width: 100%;


}

.goods-header {
  width: 100%;
  height: 88rpx;
  position: relative;
  /* margin-left: 2%; */
  display: flex;
  align-items: center;
  box-shadow: 0 0 20rpx #ccc;
}

.goodslist-wrap .input {
  width: 88%;
  height: 60rpx;
  margin-left: 2%;
  border: 1px solid #ccc;
  border-radius: 20rpx;
}

.goodslist-wrap .icon-sousuo {
  position: absolute;
  line-height: 88rpx;
  right: 82rpx;
}

.change-wrap {
  width: 10%;
  height: 88rpx;
}

/* 货品列表导航 */
.goods-nav {
  width: 100%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx #ccc;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  display: flex;
}

.goods-nav .nav-item {
  width: 20%;
}

/* 改变货品排列方式的按钮---一行两列 */
.goodslist-wrap .change {
  width: 100%;
  height: 88rpx;

  text-align: center;
  line-height: 88rpx;
  color: red;
  font-weight: 900;
  font-size: 28rpx;
  /* background-color: red; */
}

/* 修改过后的按钮 一行一列*/
.goodslist-wrap .changed {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: green;
  font-weight: 900;
  font-size: 28rpx;
  /* background-color: green; */
}


/* 货品列表 */
.goods-list {
  width: 96%;
  /* height: 3000rpx; */
  /* position: relative; */
  background-color: #ccc;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-left: 2%;
  /* align-items: center; */

}

.goods-list .goods-item {
  width: 49%;
  margin-bottom: 10rpx;
  background-color: #fff;

}

.goods-list .goods-item-c {
  width: 100%;
  background-color: #fff;
  margin-bottom: 5rpx;
  height: 220rpx;
  padding: 20rpx;
  display: flex;
  /* align-items: center; */
  justify-content: space-around;

}
.goods-item-c:last-child{
  margin-bottom: 0;
}

.goods-item .img {
  width: 100%;
  height: 356rpx;
}

.goods-item-c .img {
  width: 100%;
  height: 220rpx;
  align-items: center;
  display: flex;

}

.goods-item .img image {
  width: 100%;
  height: 100%;
}

.goods-item-c .img image {
  width: 180rpx;
  height: 180rpx;
}

.goods-item .tp-wrap {
  width: 96%;
  padding-left: 4%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 10rpx;
}

.goods-item-c .tp-wrap {

  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;

}

.goods-item .title {

  font-size: 30rpx;
  height: 76rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 38rpx;
  margin-bottom: 10rpx;
}

.goods-item-c .title {

  font-size: 30rpx;
  height: 76rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 38rpx;
}

.goods-item .price,
.goods-item-c .price {

  font-size: 28rpx;

  color: red;
}

.goods-item .price text,
.goods-item-c .price text {
  font-size: 40rpx;
}